<?xml version="1.0"?>
<!-- Generated robot.urdf based on the rosbot model -->
<robot name="rosbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.01" ixz="0"
              iyy="0.01" iyz="0.01"
              izz="0.01" />
    </inertial>
    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.15 0.04"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.02" rpy="1.5707 0 1.5707"/>
      <geometry>
        <mesh filename="package://rosbot_description/meshes/box.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- Wheels -->
  <!-- Repeat for each wheel -->
  <link name="front_left_wheel">
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.05 0.11 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Sensors -->
  <!-- Example for a LIDAR -->
  <link name="lidar_link">
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <mesh filename="package://rosbot_description/meshes/lidar.dae"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0002"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- Other links and joints can be added similarly -->

</robot>
